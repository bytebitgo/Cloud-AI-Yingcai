{
  "name": "cloudflare-ai-gateway",
  "displayName": "Cloudflare AI Gateway",
  "description": "VS Code extension for chatting with AI using Cloudflare AI Gateway",
  "version": "0.2.15",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:aiChatView",
    "onView:aiSettingsView",
    "onCommand:cloudflare-ai-gateway.startChat",
    "onCommand:cloudflare-ai-gateway.openSettings"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cloudflare-ai-gateway.startChat",
        "title": "打开AI聊天"
      },
      {
        "command": "cloudflare-ai-gateway.openSettings",
        "title": "打开AI设置"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-chat",
          "title": "AI Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "ai-chat": [
        {
          "id": "aiChatView",
          "name": "聊天",
          "type": "webview"
        },
        {
          "id": "aiSettingsView",
          "name": "设置",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Cloudflare AI Gateway",
      "properties": {
        "cloudflare-ai-gateway.configurations": {
          "type": "object",
          "default": {
            "default": {
              "name": "default",
              "endpoint": "",
              "apiKey": "",
              "models": [
                { "name": "gpt-3.5-turbo", "selected": true },
                { "name": "gpt-4", "selected": false }
              ]
            }
          },
          "description": "保存的API配置"
        },
        "cloudflare-ai-gateway.currentConfig": {
          "type": "string",
          "default": "",
          "description": "当前使用的配置名称"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "marked": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/cloudflare-ai-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/username/cloudflare-ai-gateway/issues"
  },
  "homepage": "https://github.com/username/cloudflare-ai-gateway#readme"
}
